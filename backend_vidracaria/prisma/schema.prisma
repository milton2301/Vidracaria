generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Orcamento {
  id                 Int      @id @default(autoincrement())
  nome               String
  email              String
  telefone           String
  servico            String
  tipoVidro          String?
  altura             Float?
  largura            Float?
  descricao          String?
  observacaoAdmin    String?
  dataAgendamento    DateTime?
  status             String   @default("Novo")
  valor              Float?
  criadoEm           DateTime @default(now())
}

model Usuario {
  id                 Int      @id @default(autoincrement())
  nome               String
  email              String   @unique
  senha              String
  precisaTrocarSenha Boolean  @default(true)
  ativo              Boolean  @default(true)
  bloqueado          Boolean  @default(false)
  criadoEm           DateTime @default(now())
}

model Imagem {
  id        Int      @id @default(autoincrement())
  tipo      String
  descricao String
  caminho   String
  criadoEm  DateTime @default(now())
}

model Servico {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String
  icone     String?
  ativo     Boolean  @default(true)
  criado_em DateTime @default(now())
}

model ConfiguracaoSite {
  id            Int      @id @default(autoincrement())
  chave         String   @unique
  titulo        String?
  subtitulo     String?
  texto         String?
  atualizado_em DateTime @default(now())
}



