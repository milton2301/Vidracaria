generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Orcamento {
  id               Int       @id @default(autoincrement())
  nome             String
  email            String
  telefone         String
  servicoId        Int
  servico          Servico @relation(fields: [servicoId], references: [id])
  tipoVidroId     Int?
  tipoVidro       TipoVidro? @relation(fields: [tipoVidroId], references: [id])
  altura           Float?
  largura          Float?
  descricao        String?
  imagemUrl        String?
  observacaoAdmin  String?
  dataAgendamento  DateTime?
  valor            Float?
  status           String?   @default("Novo")
  criadoEm         DateTime  @default(now())
  proposta Proposta[]
}

model Proposta {
  id              Int       @id @default(autoincrement())
  orcamentoId     Int
  orcamento       Orcamento @relation(fields: [orcamentoId], references: [id])
  servicoId       Int
  servico         Servico   @relation(fields: [servicoId], references: [id])
  tipoVidroId     Int?
  tipoVidro       TipoVidro? @relation(fields: [tipoVidroId], references: [id])
  altura          Float?
  largura         Float?
  descricao       String?
  observacaoAdmin String?
  valor           Float?
  dataCriacao     DateTime  @default(now())
}



model Usuario {
  id                 Int      @id @default(autoincrement())
  nome               String
  email              String   @unique
  senha              String
  precisaTrocarSenha Boolean  @default(true)
  ativo              Boolean  @default(true)
  bloqueado          Boolean  @default(false)
  criadoEm           DateTime @default(now())
}

model Imagem {
  id        Int      @id @default(autoincrement())
  tipo      String
  descricao String
  caminho   String
  criadoEm  DateTime @default(now())
}

model Servico {
  id         Int      @id @default(autoincrement())
  titulo     String
  descricao  String
  icone      String?
  imagem     String? 
  ativo      Boolean  @default(true)
  criado_em  DateTime @default(now())
  orcamentos Orcamento[] 
  proposta Proposta[] 
}

model TipoVidro {
  id              Int       @id @default(autoincrement())
  nome            String
  descricao       String?
  valorM2         Float
  criadoEm        DateTime  @default(now())
  propostas       Proposta[]
  orcamentos       Orcamento[]
}


model ConfiguracaoSite {
  id            Int      @id @default(autoincrement())
  chave         String   @unique
  titulo        String?
  subtitulo     String?
  texto         String?
  atualizado_em DateTime @default(now())
}



